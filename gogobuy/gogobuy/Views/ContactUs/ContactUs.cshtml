
@{
    ViewBag.Title = "ContactUs";
}

<style>
    .iframe-rwd {
        position: relative;
        padding-bottom: 350px;
        padding-top: 30px;
        height: 0;
        overflow: hidden;
    }

        .iframe-rwd iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 1050px;
            height: 400px;
        }

    #status {
        width: 90%;
        max-width: 400px;
        text-align: center;
        padding: 10px;
        margin: 0 auto;
        border-radius: 8px;
    }

        #status.response {
            background-color: rgb(0 255 255);
            animation: status 4s ease forwards;
        }

        #status.error {
            background-color: peru;
            animation: status 4s ease forwards;
        }
</style>

<body>
    <div class="container">
        <div class="row" style="margin:auto;margin-left:30px;">
            <div class="col-7" style="padding: 20px 0px;">
                <div class="">
                    <span class="" style="color: #ff5400;">聯絡我們</span>
                    <h2 class="title">歡迎來信</h2>
                </div>
                <form id="my-form" action="https://formspree.io/f/xqkwlw" method="POST" class="row" onsubmit="alert('信件提交成功')">
                    <div class="col-md-4">
                        <input name="名字" type="text" class="form-control" style="background-color: #ecf0f1;" placeholder="你的名字 *" required>
                    </div>
                    <div class="col-md-4">
                        <input name="信箱" type="email" class="form-control" style="background-color: #ecf0f1;" placeholder="你的信箱 *" required>
                    </div>
                    <div class="col-md-4">
                        <input name="電話" type="text" class="form-control" style="background-color: #ecf0f1;" placeholder="你的電話 ">
                    </div>
                    <div class="col-12">
                        <label for="" class="form-label"></label>
                        <input name="標題" type="text" class="form-control" style="background-color: #ecf0f1;" placeholder="標題">
                    </div>
                    <div class="col-12">
                        <label for="" class="form-label"></label>
                        <textarea name="內容" class="form-control" style="background-color: #ecf0f1;" rows="5"
                                  placeholder="內容"></textarea>
                    </div>
                    <div class="container" style="padding-top:30px;">
                        <button id="my-form-button" class="btn btn-outline-secondary "
                                style="margin-top: 30px;width:190px;height:60px; font-size: large;float:right" type="submit">
                            提交
                        </button>
                        <button class="btn btn-outline-secondary "
                                style="margin-top: 30px;margin-right: 20px; width:190px;height:60px; font-size: large;float:right"
                                type="reset">
                            清空
                        </button>
                    </div>
                    <div id="status"></div>
                </form>
            </div>
            <div class="card" style="width: 16rem;margin-top: 40px;margin-left:40px;background-color: #ecf0f1;">
                <img style=" height: 200px;"
                     src="https://media.istockphoto.com/photos/contact-us-sign-on-a-wooden-desk-picture-id1091858450?k=6&m=1091858450&s=612x612&w=0&h=ipl1LmUiPUopt_q_RSuXHzjNsnquVyg9uPBJ5JruTQE="
                     class="card-img-top" alt="...">
                <div class="card-body" style="text-align:center;">
                    <img src="https://img.icons8.com/small/32/000000/phone.png"><span>Phone</span>
                    <p class="">+886 08 9090 8670</p>
                </div>
                <div class="card-body" style="text-align:center;">
                    <img src="https://img.icons8.com/material-outlined/32/000000/new-post.png"><span>Email</span>
                    <p class="">gogobuy@info.com</p>
                </div>
                <div class="card-body" style="text-align:center;">
                    <img src="https://img.icons8.com/small/32/000000/address.png"><span>Address</span>
                    <p class="">71W Park Broklyn Street,<br>New York. United States</p>
                </div>
            </div>
        </div>
    </div>
</body>
<script>
    window.addEventListener("DOMContentLoaded", function () {
        var form = document.getElementById('my-form');
        var status = document.getElementById('status');


        function response() {
            form.reset();
            status.classList.add('response');
            status.innerHTML = "Thanks!";
        }
        function error() {
            status.classList.add('error');
            status.innerHTML = "Oops!";
        }

        async function handleSubmit(event) {
            event.preventDefault();
            var status = document.getElementById("status");
            var data = new FormData(event.target);
            fetch(event.target.action, {
                method: form.method,
                body: data,
                headers: {
                    'Accept': 'application/json'
                }
            }).then(response => {

                status.innerHTML = "Thanks for your submission!";
                form.reset()
            }).catch(error => {
                status.innerHTML = "Oops! There was a problem submitting your form"
            });
        }
        form.addEventListener("submit", handleSubmit)
    })
</script>