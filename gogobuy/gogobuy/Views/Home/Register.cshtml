@model gogobuy.tMembership

@{
    ViewBag.Title = "Register";
}

<article>
    <h5 class="mx-5 my-5">首頁 / 註冊</h5>
    <div class="" style="display:flex; align-items: center; margin-bottom:60px;">
        <div class="col-md-6 text-center mx-auto border border-2 border-primary" style="background: #D6E2FF; border-radius: 23px;">
            <form action="~/Home/Register" method="post" class="" style="padding:60px;" id="login-form">
                <div class="my-2 row">
                    <div class="col-md-6 form-floating">
                        <input type="text" class="form-control" id="floatingFirstName" placeholder="FirstName" style="max-width:100%;" name="fFirstName" value="@Model.fFirstName">
                        <label for="floatingFirstName" class="ms-3">姓 / First name</label>
                    </div>
                    <div class="col-md-6 form-floating">
                        <input type="text" class="form-control" id="floatingLastName" placeholder="LastName" style="max-width:100%;" name="fLastName" value="@Model.fLastName">
                        <label for="floatingLastName" class="ms-3">名 / Last name</label>
                    </div>
                </div>
                <div class="form-floating mt-4 mb-2">
                    <input type="email" class="form-control" id="floatingEmail" placeholder="name@example.com" style="max-width:100%;" name="fEmail" value="@Model.fEmail">
                    <label for="floatingEmail" class="">Email</label>
                </div>
                <div class="form-floating mt-4 mb-2">
                    <input type="tel" class="form-control" id="floatingTel" placeholder="Tel" style="max-width:100%;" name="fPhone" value="@Model.fPhone">
                    <label for="floatingTel" class="">手機號碼 / Mobile No</label>
                </div>
                <div class="form-floating mt-4 mb-2">
                    <input type="tel" class="form-control" id="floatingAddress" placeholder="Address" style="max-width:100%;" name="fAddress" value="@Model.fAddress">
                    <label for="floatingAddress" class="">地址 / Address</label>
                </div>
                <div class="row mt-4 mb-5 text-start">
                    <div class="col-md-6">
                        <fieldset class="row">
                            <legend class="col-form-label col-md-4">性別：</legend>
                            <div class="col-md-8">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="fGender" id="flexRadioDefault1" value="false">
                                    <label class="form-check-label" for="flexRadioDefault1">
                                        男性
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="fGender" id="flexRadioDefault2" value="true">
                                    <label class="form-check-label" for="flexRadioDefault2">
                                        女姓
                                    </label>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                    <div class="col-md-6">
                        <div>生日：</div>
                        <input type="date" class="form-control" name="fDateOfBirth" value="2020-01-01" style="max-width:100%;" id="fDateOfBirth">
                    </div>
                </div>
                <div class="form-floating mt-4 mb-2">
                    <input type="password" class="form-control" id="floatingPassword" placeholder="Password" style="max-width:100%;" name="fPasswordFirst">
                    <label for="floatingPassword">密碼 / Password</label>

                </div>
                <div class="form-floating mt-4 mb-2">
                    <input type="password" class="form-control" id="floatingPassword2" placeholder="Password" style="max-width:100%;" name="fPassword">
                    <label for="floatingPassword2">重複輸入密碼 / Password again</label>
                </div>
                <div class="text-danger fw-bold fs-5">
                    <span>@ViewBag.Msg</span>
                    <div>@Html.ValidationSummary()</div>
                </div>
                <div class="d-grid gap-2 mt-5">
                    <button class="btn btn-primary btn-lg" type="submit">註冊</button>
                </div>
                <hr class="mt-3 mb-5" />
                <div class="mt-2 fs-5 fw-bold">已經有帳號了嗎??   <a href="~/Home/Login">(登入)</a></div>
            </form>
        </div>
    </div>
</article>