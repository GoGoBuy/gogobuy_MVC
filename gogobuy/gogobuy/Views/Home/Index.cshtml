@*販售熱門商品區塊*@
<img src="~/Content/img/index/b_ornament_121_0M.png" style="width:100%;" />
<section class="container" style="background: linear-gradient(180deg, #FFFFFF 0%, rgba(255, 255, 255, 0) 100%), #CFFFCC;">
    <h4 class="my-3 mx-5">販售熱門商品：</h4>
    <div class="row text-center d-flex justify-content-between">
        @{
            int count = 1;
            foreach (tProduct c in Model)
            {
                if (count <= 8)
                {
                    <form class="col-md-3 col-sm-4 col-6 border border-success rounded" method="post" action="~/Home/AddCollection">
                        <input type="text" name="ProductID" value="@c.fProductID" hidden />
                        <a href="~/Details/ProductDetails?fProductID=@c.fProductID" class="link-success">
                            <img src="~/Content/img/Product/@c.fImgPath" style="width:90%;" />
                            <div class="h5">@c.fProductName</div>
                        </a>
                        <div class="row align-items-center">
                            <div class="col-md-8 fs-4">價格：@c.fPrice</div>
                            <div class="col-md-4"><button type="submit"><img src="~/Content/img/index/heart.png" style="width:100%; max-width:30px;" /></button></div>
                        </div>
                    </form>
                }
                count++;
            }
        }


    </div>
</section>
