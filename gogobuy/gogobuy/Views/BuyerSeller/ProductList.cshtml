@using gogobuy.ViewModels;
@model List<ProductViewModel>
@{
    ViewBag.Title = "ProductList";
}
<head>

    <style>
        .item {
            width: 98%;
            height: 60%;
            margin: 0 auto;
        }

            .item > img {
                padding-top: 10px;
                padding-bottom: 10px;
                width: 100%;
                height: 100%;
            }

        .item-name {
            display: -webkit-box;
            width: 95%;
            height: 38px;
            margin: 0 auto;
            font-size: 0.95rem;
            line-height: 1.2rem;
            overflow: hidden;
            -webkit-box-orient: vertical;
            -webkit-line-clamp: 2;
        }

        .price {
