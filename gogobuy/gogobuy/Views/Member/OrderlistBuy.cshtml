@model List<gogobuy.ViewModels.OrderlistBuyViewModel>
@{
    ViewBag.Title = "OrderlistBuy";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://use.fontawesome.com/releases/v5.0.8/js/all.js"></script>
    <link rel="stylesheet" type="text/css" href="css/style.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(function () {
            $('.details').hide();
            $('.detailsButton').click(function () {
                console.log($(this).text());
                if ($(this).text() == '訂單明細🔽') {
                    $(this).parent().next().show();
                    $(this).text('訂單明細🔼');
                    return;
                }
                if ($(this).text() == '訂單明細🔼') {
                    $(this).parent().next().hide();
                    $(this).text('訂單明細🔽');
                    return;
                }
            });
            
        });
    </script>
</head>



<div style="height: 50px; width: 100%; background: white;"></div>
<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="~/Home/Index">首頁</a></li>
            <li class="breadcrumb-item active" aria-current="page"><a href="~/Member/MemberCenter">會員中心</a></li>
        </ol>
    </nav>
</div>
<div style="height: 50px; width: 100%; background: white;"></div>
<div id="contain">
    <div class="my-account">
        <div class="container-fluid">
            <div class="row">
                <nav class="col-md-6 sidebar">
                    <div class="text" style="color: rgb(95, 83, 83);">Member Center</div>
                    <ul class="navul">
                        <li>
                            <a href="~/Member/SwitchToBuyAndShop" style="color: rgb(95, 83, 83);">
                                <img src="~/Content/img/img_memberCenter/stock-market.png" alt="icon"
                                     class="ui-li-icon">買賣家專區
                            </a>
                        <li class="navulli">
                            <a href="#" style="color: rgb(95, 83, 83);" class="Account-btn">
                                <img src="~/Content/img/img_memberCenter/user-setting.png" alt="icon" class="ui-li-icon">帳戶資料
                                <span><i class="fas fa-sort-down first"></i></span>
                            </a>
                            <ul class="Account-show">
                                <p>
                                    <a href="~/Member/EditProfile" style="color: rgb(122, 111, 111);">
                                        <img src="~/Content/img/img_memberCenter/user.png" alt="icon"
                                             class="ui-li-icon">資料修改
                                    </a>
                                </p>
                                <p>
                                    <a href="~/Member/UpdatePassword" style="color: rgb(122, 111, 111);">
                                        <img src="~/Content/img/img_memberCenter/password.png" alt="icon"
                                             class="ui-li-icon">密碼修改
                                    </a>
                                </p>
                            </ul>
                        </li>

                        <li>
                            <a href="#" style="color: rgb(95, 83, 83);" class="BB-btn">
                                <img src="~/Content/img/img_memberCenter/price-list.png" alt="icon" class="ui-li-icon">訂單查詢
                                <span><i class="fas fa-sort-down second"></i></span>
                            </a>
                            <ul class="BB-show">
                                <p>
                                    <a href="~/Member/OrderlistBuy" style="color: rgb(122, 111, 111);">
                                        <img src="~/Content/img/img_memberCenter/check-list.png" alt="icon"
                                             class="ui-li-icon">購買查詢
                                    </a>
                                </p>
                                <p>
                                    <a href="~/Member/OrderlistSell" style="color: rgb(122, 111, 111);">
                                        <img src="~/Content/img/img_memberCenter/shop.png" alt="icon"
                                             class="ui-li-icon">販售查詢
                                    </a>
                                </p>
                            </ul>
                        </li>
                        <li>
                            <a href="~/Home/LoginOutCheck" style="color: rgb(95, 83, 83);">
                                <img src="~/Content/img/img_memberCenter/exit.png" alt="icon" class="ui-li-icon">登出
                            </a>
                        </li>
                    </ul>
                </nav>

                <div class="col-md-7 offset-md-1">
                    <div class="tab-content justify-content-center" id="v-pills-account-details" role="tabpanel"
                         aria-labelledby="v-pills-account-details-tab">
                        <section class="person show active">
                            <h2 class="mb-2 text-center pb-4">購買查詢</h2>
                            <div class="container text-center table-responsive">
                                <p class="mb-4 text-center"></p>
                            </div>
                        </section>
                        @{
                            int count = 0;
                            foreach (var item in Model)
                            {
                                <div class="pd-3 my-5" style="background: rgba(122, 111, 111, 0.3)">
                                    <section class="person show active">
                                        <div class="container text-center table-responsive">
                                            <p class="mb-4 text-center"></p>
                                            <table class="table  table-bordered">
                                                <thead>
                                                    <tr style="background-color: rgba(240, 50, 75, 0.623); border-color: black;">
                                                        <th>訂單<br>編號</th>
                                                        <th>訂購<br>日期</th>
                                                        <th>訂單<br>狀態</th>
                                                        <th>消費<br>總額</th>
                                                        <th>付款<br>方式</th>
                                                        <th>狀態</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr class="align-middle">
                                                        <td style="border-color: black;">@item.fOrderUUID</td>
                                                        <td style="border-color: black;">@String.Format("{0:yyyy/MM/dd}",item.fOrderDate)</td>
                                                        <td style="border-color: black;">@item.fOrderStatus</td>
                                                        <td style="border-color: black;">@String.Format("{0:0}", item.fPrice)</td>
                                                        <td style="border-color: black;">@item.fOrderPayWay</td>
                                                        <td style="border-color: black;"><button>已收貨</button></td>
                                                    </tr>
                                                </tbody>
                                            </table>

                                            <p>
                                                <button class="detailsButton btn-outline-secondary">訂單明細🔽</button>
                                            </p>
                                            <div class="details">
                                                <div class="card card-body">
                                                    <table class="table  table-bordered">
                                                        <thead>
                                                            <tr style="background-color: rgba(240, 50, 75, 0.623); border-color: black;">
                                                                <th>商品<br>名稱</th>
                                                                <th>商品<br>單價</th>
                                                                <th>數量</th>
                                                                <th>收貨<br>確認</th>
                                                            </tr>
                                                        </thead>
                                                        @{
                                                            List<int?> tempQuantity = new List<int?>();
                                                            foreach (var dogItem in item.lsttOrderDetailslist)
                                                            {
                                                                tempQuantity.Add(dogItem.fQuantity);
                                                            }

                                                            int tempCount = -1;
                                                            foreach (var dogItem in item.lsttProductlist)
                                                            {
                                                                tempCount++;
                                                                <tbody>
                                                                    <tr class="align-middle">
                                                                        <td style="border-color: black;">@dogItem.fProductName</td>
                                                                        <td style="border-color: black;">@String.Format("{0:0}", dogItem.fPrice)</td>
                                                                        <td style="border-color: black;">@tempQuantity[tempCount]</td>
                                                                        <td style="border-color: black;">完成<br>訂單</td>
                                                                    </tr>
                                                                </tbody>
                                                            }
                                                        }
                                                    </table>
                                                </div>

                                            </div>

                                        </div>
                                    </section>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="sidebar-left-margin"></div>
</div>
<script>
    $('.BB-btn').click(function () {
        $('nav ul .BB-show').toggleClass("show");
    });
    $('.Account-btn').click(function () {
        $('nav ul .Account-show').toggleClass("show1");
    });
</script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


<div style="margin: 0 auto; width: 100%; height: 20px; background: white;"></div>

