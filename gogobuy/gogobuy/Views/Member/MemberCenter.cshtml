
@{
    ViewBag.Title = "MemberCenter";
}

<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://use.fontawesome.com/releases/v5.0.8/js/all.js"></script>
</head>
<div style="height: 50px; width: 100%; background: white;"></div>
<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="~/Home/index">首頁</a></li>
            <li class="breadcrumb-item active" aria-current="page"><a href="~/Member/MemberCenter">會員中心</a></li>
        </ol>
    </nav>

</div>

<div style="height: 50px; width: 100%; background: white;"></div>

<div id="contain">
    <div class="my-account">
        <div class="container-fluid">
            <div class="row">
                <nav class="col-md-6 sidebar">
                    <div class="text" style="color: rgb(95, 83, 83);">Member Center</div>
                    <ul class="navul">
                        <li>
                            <a href="~/Member/SwitchToBuyAndShop" style="color: rgb(95, 83, 83);">
                                <img src="~/Content/img/img_memberCenter/stock-market.png" alt="icon"
                                     class="ui-li-icon">買賣家專區
                            </a>
                        <li class="navulli">
                            <a href="#" style="color: rgb(95, 83, 83);" class="Account-btn">
                                <img src="~/Content/img/img_memberCenter/user-setting.png" alt="icon" class="ui-li-icon">帳戶資料
                                <span><i class="fas fa-sort-down first"></i></span>
                            </a>
                            <ul class="Account-show">
                                <p>
                                    <a href="~/Member/EditProfile" style="color: rgb(122, 111, 111);">
                                        <img src="~/Content/img/img_memberCenter/user.png" alt="icon"
                                             class="ui-li-icon">資料修改
                                    </a>
                                </p>
                                <p>
                                    <a href="~/Member/UpdatePassword" style="color: rgb(122, 111, 111);">
                                        <img src="~/Content/img/img_memberCenter/password.png" alt="icon"
                                             class="ui-li-icon">密碼修改
                                    </a>
                                </p>
                            </ul>
                        </li>

                        <li>
                            <a href="#" style="color: rgb(95, 83, 83);" class="BB-btn">
                                <img src="~/Content/img/img_memberCenter/price-list.png" alt="icon" class="ui-li-icon">訂單查詢
                                <span><i class="fas fa-sort-down second"></i></span>
                            </a>
                            <ul class="BB-show">
                                <p>
                                    <a href="~/Member/OrderlistBuy" style="color: rgb(122, 111, 111);">
                                        <img src="~/Content/img/img_memberCenter/check-list.png" alt="icon"
                                             class="ui-li-icon">購買查詢
                                    </a>
                                </p>
                                <p>
                                    <a href="~/Member/OrderlistSell" style="color: rgb(122, 111, 111);">
                                        <img src="~/Content/img/img_memberCenter/shop.png" alt="icon"
                                             class="ui-li-icon">販售查詢
                                    </a>
                                </p>
                            </ul>
                        </li>
                        <li>
                            <a href="~/Home/LoginOutCheck" style="color: rgb(95, 83, 83);">
                                <img src="~/Content/img/img_memberCenter/exit.png" alt="icon" class="ui-li-icon">登出
                            </a>
                        </li>
                    </ul>
                </nav>
                <div class="col-md-6 offset-md-2">
                    <div class="tab-content justify-content-center" id="v-pills-account-details" role="tabpanel"
                         aria-labelledby="v-pills-account-details-tab">
                        <section class="person show active">
                            <div class="container">
                                <h2 class="mb-2 text-center pb-4">買賣家專區</h2>
                                <p class="mb-4 text-center"></p>
                                <div class="text-center">
                                    <a href=""><img src="~/Content/img/img_memberCenter/買家.png" width="230" height="200" alt="買家專區"></a>
                                    <a href=""><img src="~/Content/img/img_memberCenter/賣家.png" width="230" height="200" alt="賣家專區"></a>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="sidebar-left-margin"></div>
</div>
<script>
		$('.BB-btn').click(function () {
			$('nav ul .BB-show').toggleClass("show");
		});
		$('.Account-btn').click(function () {
			$('nav ul .Account-show').toggleClass("show1");
		});
</script>


<div style="margin: 0 auto; width: 100%; height: 20px; background: white;"></div>

